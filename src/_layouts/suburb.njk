---
layout: base.njk
---

{% block schema %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "SEO {{ suburb }}",
    "description": "{{ description }}",
    "url": "{{ site.url }}{{ page.url }}",
    "provider": {
        "@type": "LocalBusiness",
        "name": "{{ site.name }}",
        "telephone": "{{ site.phone }}",
        "url": "{{ site.url }}"
    },
    "areaServed": {
        "@type": "Place",
        "name": "{{ suburb }}, Sydney, NSW, Australia"
    },
    "serviceType": "SEO Services"
}
</script>
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
        {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "{{ site.url }}"
        },
        {
            "@type": "ListItem",
            "position": 2,
            "name": "SEO {{ suburb }}",
            "item": "{{ site.url }}{{ page.url }}"
        }
    ]
}
</script>
{% endblock %}

<section class="hero suburb-hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-text">
                {% if heroBadge %}<div class="hero-badge">{{ heroBadge }}</div>{% endif %}
                <h1>{% if h1 %}{{ h1 }}{% else %}SEO {{ suburb }}{% endif %}</h1>
                {% if heroLead %}<p class="hero-subtitle">{{ heroLead }}</p>{% endif %}
                {% if heroNote %}<p class="hero-note">{{ heroNote }}</p>{% endif %}
                <div class="hero-ctas">
                    <a href="tel:{{ site.phone | phoneLink }}" class="btn btn-primary btn-large">
                        <i class="fas fa-phone"></i> {{ site.phone }}
                    </a>
                    <a href="/contact" class="btn btn-secondary btn-large">
                        Get in Touch
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content-section">
    <div class="container">
        <div class="content-block">
            {{ content | safe }}
        </div>
    </div>
</section>

<section class="cta">
    <div class="container">
        <div class="cta-content">
            <div class="cta-buttons">
                <a href="tel:{{ site.phone | phoneLink }}" class="btn btn-white btn-large">
                    <i class="fas fa-phone"></i> {{ site.phone }}
                </a>
                <a href="/contact" class="btn btn-outline-white btn-large">
                    Contact Us
                </a>
            </div>
        </div>
    </div>
</section>
